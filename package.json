{
  "name": "fotoclick-from-github",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "clean": "rm -rf dist",
    "build": "npm run clean && vite build && esbuild server.js --bundle --platform=node --outfile=dist/server.bundle.js",
    "start": "node dist/server.bundle.js",
    "deploy": "rm -rf node_modules && npm install && npm run build && (pm2 delete fotoclick || true) && pm2 start dist/server.bundle.js --name fotoclick"
  },
  "dependencies": {
    "@google/genai": "^0.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "esbuild": "^0.21.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.13"
  }
}